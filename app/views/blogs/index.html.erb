<div class="container">
  <% if user_signed_in? %>
    <%= link_to 'New Blog', new_blog_path, class: 'btn btn-primary mb-3' %>
  <% end %>
  <div class="row">
    <% @blogs.each do |blog| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= blog.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted">By <%= blog.author.try(:email) %></h6>
            <p class="card-text"><%= truncate(blog.content, length: 100) %></p>
            <p class="card-text">
              <% if current_user.present? && current_user.id.to_s == blog.author_id.to_s %>
                <strong>Status:</strong> <%= blog.status.capitalize %><br>
              <% end %>
              <% if blog.published_date.present? %>
                <strong>Published Date:</strong> <%= blog.published_date.strftime("%B %d, %Y") %>
              <% else %>
                <strong>Published Date:</strong> N/A
              <% end %>
            </p>
            <%= link_to 'Read More', blog_path(blog), class: 'btn btn-secondary btn-sm' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
